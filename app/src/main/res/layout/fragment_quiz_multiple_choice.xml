<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5D9ED"
    tools:context=".ui.dashboard.QuizMultipleChoiceFragment">

    <ImageView
        android:id="@+id/problem"
        android:layout_width="287dp"
        android:layout_height="140dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/problem"
        android:src="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/answer1"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:elevation="10dp"
        android:fadingEdge="vertical"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problem" />

    <ImageView
        android:id="@+id/answer3"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:elevation="10dp"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer1" />

    <ImageView
        android:id="@+id/answer2"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="60dp"
        android:elevation="10dp"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer1"
        app:layout_constraintTop_toBottomOf="@+id/problem" />

    <ImageView
        android:id="@+id/answer4"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:elevation="10dp"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer3"
        app:layout_constraintTop_toBottomOf="@+id/answer2" />

    <Button
        android:id="@+id/loadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:background="#000000"
        android:text="Load"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer3" />
</androidx.constraintlayout.widget.ConstraintLayout>