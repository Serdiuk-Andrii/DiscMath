<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/problem"
        android:layout_width="287dp"
        android:layout_height="140dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/problem"
        android:src="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        />

    <ImageView
        android:id="@+id/answer1"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:elevation="10dp"
        android:fadingEdge="vertical"
        android:scaleType="center"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problem" />

    <ImageView
        android:id="@+id/answer2"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="60dp"
        android:elevation="10dp"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer1"
        app:layout_constraintTop_toBottomOf="@+id/problem"
        android:scaleType="center"
        />

    <ImageView
        android:id="@+id/answer3"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:elevation="10dp"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer1"
        android:scaleType="center"
        />

    <ImageView
        android:id="@+id/answer4"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:elevation="10dp"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer3"
        app:layout_constraintTop_toBottomOf="@+id/answer2"
        android:scaleType="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>