<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="15pt"
        android:layout_marginRight="20pt"
        app:cardElevation="4dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/material_dynamic_neutral50"
        android:background="#AAAAAA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pdf"
                    android:layout_width="103dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/pdf_icon_description"
                    tools:srcCompat="@drawable/pdf" />

                <ImageView
                    android:id="@+id/video"
                    android:layout_width="103dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/video_icon_description"
                    tools:srcCompat="@drawable/play" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>