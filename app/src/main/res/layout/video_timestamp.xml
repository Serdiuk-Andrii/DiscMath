<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    >

    <FrameLayout
        android:id="@+id/timestamp_time_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/timestamp_time_background"
        >

        <TextView
            android:id="@+id/timestamp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="12sp"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/timestamp_title_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/timestamp_title_background"
        >

        <TextView
            android:id="@+id/timestamp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0E0E0E"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textSize="13sp"
            />

    </FrameLayout>


</LinearLayout>