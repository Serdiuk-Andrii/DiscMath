<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_sections">

    <fragment
        android:id="@+id/navigation_sections"
        android:name="com.example.discmath.ui.learning.SectionsLearningFragment"
        android:label="@string/theory"
        tools:layout="@layout/fragment_learning_sections" />

    <fragment
        android:id="@+id/navigation_quiz_multiple_choice"
        android:name="com.example.discmath.ui.quiz_fragment.QuizMultipleChoiceFragment"
        android:label="@string/exercises"
        tools:layout="@layout/fragment_quiz_multiple_choice" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.discmath.ui.notifications.NotificationsFragment"
